<%# Basic Hero/Jumbo/Header %>
<div class="container-fluid home-header">
  <div class="row">
    <div class="head-banner-stall text-center text-white">
      <div class="my-auto text-center">
      <h1><%= @stall.name %></h1>
      <h5><%= @stall.description %></h5>
      <h5><%= @stall.category %></h5>

            <div class="socials d-flex justify-content-center">
        <!-- Facebook -->
        <a
          class="btn-icon text-white btn-floating mt-1 mx-3"
          href="#!"
          role="button"
          ><i class="fab fa-facebook-f"></i
        ></a>

        <!-- Twitter -->
        <a
          class="btn-icon text-white btn-floating mt-1 mx-3"
          href="#!"
          role="button"
          ><i class="fab fa-twitter"></i
        ></a>
        <!-- Instagram -->
        <a
          class="btn-icon text-white btn-floating mt-1 mx-3"
          href="#!"
          role="button"
          ><i class="fab fa-instagram"></i
        ></a>
      </div>
    </div>

      <div class="py-4 pl-4 text-center my-auto">
        <h3> Trading at</h3>
        <ul class="stall-list">
          <% @stall.markets.each do |market| %>
          <li><span><%= link_to market.name, market_path(market), class: "btn-stall bold"%></li>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
</div>


<%# Carousel %>
