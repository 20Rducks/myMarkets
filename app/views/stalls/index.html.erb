<%# Basic Hero/Jumbo/Header %>
<div class="container-fluid home-header">
  <div class="row">

    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 split-header">
      <h1>Traders</h1>
      <p>Find a stall to suit your wants and needs</p>
      <div class="btn btn-primary">Become a trader</div>
    </div>

    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 split-header flex-fill">
      <div class="py-4 pl-4 align-middle">
        <%# <%= cl_image_tag @market.photos[0].key, class: "card-img-top card-img" %>
        <h4> Carousel Of Images?? </h4>
      </div>
    </div>

  </div>
</div>

  <div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <div class="swiper-slide">Slide 1</div>
      <div class="swiper-slide">Slide 2</div>
      <div class="swiper-slide">Slide 3</div>
      ...
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div>
  </div>





<%# Main Card %>
<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 rails-lg-3 row-cols-xl-4 g-4">
    <% @stalls.each do |stall| %>
      <%= link_to stall_path(stall) do %>
        <div class="col">
          <div class="card home-card-img mb-4">
            <span><img class="card-img-top" alt="..." src="<%# cl_stall_path stall.photos.first.key%>"></span>
            <div class="card-body">
              <h5 class="card-title"><%= stall.name  %></h5>
              <p class="card-text"><%= stall.description %></p>
            </div>
            <div class="card-footer">
             <small class="text-white"><%= stall.category %></small>
             <small class="text-white"><%= stall.website_url %></small>
             <small class="text-white"><%= stall.instagram_url %></small>
             <small class="text-white"><%= stall.twitter_url %></small>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


<%= render "shared/footer-index" %>


<%# Card Group Layout %>
<div class="container">
  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 g-4 mb-5">


  <%# Card Layout %>
    <% @stalls.each do |stall| %>
      <%= link_to stall_path(stall) do %>
          <div class="col">
            <div class="card home-card-img h-100">
              <%# <%= cl_image_tag stall.photos.first.key, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= stall.name %></h5>
                <p class="card-text"><%= stall.bio %></p>
                <p class="card-text"><%= stall.address %></p>
                <p class="card-text"><%= stall.phone_number %></p>
              </div>
              <div class="card-footer">
                <small class="text-dark"><%= stall.website %></small>
              </div>
              <div class="card-footer d-inline-flex">
                <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 stall-icon text-center">
                  <i class="fa-solid fa-wheelchair"></i>
                  <%# <p>Wheelchair Access</p> %>
                  <% if @stall.website_url %>
                    <%= @stall.website_url %>
                  <% end %>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 stall-icon text-center">
                  <i class="fa-solid fa-paw"></i>
                  <%# <p>Pet Friendly</p> %>
                  <% if stall.instagram_url %>
                    <%= stall.instagram_url %>
                  <% end %>
                </div>

                <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 stall-icon text-center">
                  <i class="fa-solid fa-square-parking"></i>
                  <%# <p>Parking</p> %>
                  <% if @stall.parking %>
                    <%= @stall.parking %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
