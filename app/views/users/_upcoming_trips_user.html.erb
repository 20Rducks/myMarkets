<%# UPCOMING TRIPS %>
<div class="tab-pane fade show active justify-content-center" id="nav-home" role="tabpanel" aria-labelledby="favourites-tab" tabindex="0">
  <div class="trip-tabs d-flex">
    <div class="card-group flex-fill justify-content-center ">
      <% current_user.upcoming_trips.each do |trip| %>
        <% if trip.date > Time.now %>
          <div class="home-card home-card-img m-2">
            <%= link_to market_path(trip.market) do %>
            <% if trip.market.photos.attached? %>
              <%= cl_image_tag trip.market.photos.first.key, class: "home-card-img"%>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1535202610320-919f9b13de77?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8Zm9vZCUyMG1hcmtldHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=600&q=60" , class: "card-img-top"%>
            <% end %>
              <div class="card-body" >
                <h5 class="card-title"><small>Going to </small> <b><%= trip.market.name %></b></h5>
                <p><%= trip.date %></p>
                <% trip.users.each do |t| %>
                  <%= link_to user_path(t) do %>
                    <div><small>With </small> <em><%= t.username %></em></div>
                  <% end %>
                <% end %>
              </div>
              <div class="card-footer">
                <small class="text-dark text-center"><%= trip.message %></small>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
