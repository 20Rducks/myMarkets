<%# PAST TRIPS %>
<div class="tab-pane fade " id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
  <div class="trip-tabs">
    <div class="card-group">
      <% @user.trips.each do |trip| %>
        <% if trip.date < Time.now %>
          <div class="home-card m-2">
            <%= link_to market_path(trip.market) do %>
            <% if trip.market.photos.attached? %>
              <%= cl_image_tag trip.market.photos.first.key, class: "home-card-img"%>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1535202610320-919f9b13de77?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8Zm9vZCUyMG1hcmtldHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=600&q=60" , class: "card-img-top"%>
            <% end %>
              <div class="card-body" >
                <h5 class="card-title"><small>How was</small><br> <b><%= trip.market.name %>?</b></h5>
                <p><%= trip.date %></p>
                <small>You joined</small>
                <% trip.users.each do |t| %>
                  <%= link_to user_path(t) do %>
                    <div><em><%= t.username %></em></div>
                  <% end %>
                <% end %>
              </div>
              <div class="card-footer">
                <div class="text-center"><%= trip.message %></div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
