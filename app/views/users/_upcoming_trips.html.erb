<%# UPCOMING TRIPS %>
<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="favourites-tab" tabindex="0">
  <div class="trip-tabs">
    <div class="card-group">
      <% current_user.upcoming_trips.each do |trip| %>
        <% if trip.date > Time.now %>
          <div class="home-card m-2">
            <%= link_to market_path(trip.market) do %>
              <%= cl_image_tag trip.market.photos.first.key, class: "home-card-img"%>
              <div class="card-body" >
                <h5 class="card-title"><small>Upcoming trip to</small><br> <b><%= trip.market.name %></b></h5>
                <p><%= trip.date %></p>
                <small>Get ready to join</small>
                <% trip.users.each do |t| %>
                  <%= link_to user_path(t) do %>
                    <div><em><%= t.username %></em></div>
                  <% end %>
                <% end %>
              </div>
              <div class="card-footer">
                <small class="text-center"><%= trip.message %></small>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
