<%# Basic Hero/Jumbo/Header %>
<div class="container">
  <div class="row">
    <div class="jumbotron mt-3">
      <h2>Pick Your Market</h2>
      <p>Plenty of markets to suit your needs</p>
    </div>
  </div>
</div>

<%# Card Group Layout %>
<div class="container">
  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 g-4 mb-5">


  <%# Card Layout %>
    <% @markets.each do |market| %>
      <%= link_to market_path(market) do %>
          <div class="col">
            <div class="card home-card-img h-100">
              <%# <%= cl_image_tag market.photos.first.key, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= market.name %></h5>
                <p class="card-text"><%= market.bio %></p>
                <p class="card-text"><%= market.address %></p>
                <p class="card-text"><%= market.phone_number %></p>
              </div>
              <div class="card-footer">
                <small class="text-dark"><%= market.website %></small>
              </div>
              <div class="card-footer d-inline-flex">
                <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 market-icon text-center">
                  <i class="fa-solid fa-wheelchair"></i>
                  <%# <p>Wheelchair Access</p> %>
                  <% if @market.wheelchair_access %>
                    <%= @market.wheelchair_access %>
                  <% end %>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 market-icon text-center">
                  <i class="fa-solid fa-paw"></i>
                  <%# <p>Pet Friendly</p> %>
                  <% if @market.pet_friendly %>
                    <%= @market.pet_friendly %>
                  <% end %>
                </div>

                <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 market-icon text-center">
                  <i class="fa-solid fa-square-parking"></i>
                  <%# <p>Parking</p> %>
                  <% if @market.parking %>
                    <%= @market.parking %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= render "shared/footer-index" %>
